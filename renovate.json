{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":timezone(Asia/Tokyo)",
    "group:recommended",
    "group:monorepos"
  ],
  "labels": ["dependencies", "renovate"],
  "pin": {
    "automerge": false
  },
  "pinDigest": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchFileNames": ["apps/*", "packages/*"],
      "groupName": "React 系ライブラリの更新",
      "matchPackageNames": [
        "/^react$/",
        "/^react-dom$/",
        "/^@types/react/",
        "/^@types/react-dom/"
      ]
    },
    {
      "matchFileNames": ["apps/*", "packages/*"],
      "groupName": "全体共通依存",
      "matchPackageNames": ["*"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "branch",
      "matchFileNames": ["apps/*", "packages/*"]
    }
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}
